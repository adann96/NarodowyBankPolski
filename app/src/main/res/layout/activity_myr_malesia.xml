<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Currencies.MyrMalesiaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/malaysia_wave"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:text="Ringgit"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/infoMyrSymbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/infoMyrSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Symbol: 1 MYR"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/myrMalesiaRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/myrMalesiaRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Kurs: "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/changePercentMyr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoMyrSymbol" />

    <TextView
        android:id="@+id/changePercentMyr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Zmiana: "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/changePercentZl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myrMalesiaRate" />

    <TextView
        android:id="@+id/changePercentZl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="14dp"
        android:text="Zmiana (zÅ‚): "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/myrBarChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePercentMyr" />

    <TextView
        android:id="@+id/myrMalesiaRateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/changePercentMyr"
        app:layout_constraintStart_toEndOf="@+id/myrMalesiaRate"
        app:layout_constraintTop_toBottomOf="@+id/infoMyrSymbol" />

    <TextView
        android:id="@+id/changePercentMyrValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/changePercentZl"
        app:layout_constraintStart_toEndOf="@+id/changePercentMyr"
        app:layout_constraintTop_toBottomOf="@+id/myrMalesiaRateValue" />

    <TextView
        android:id="@+id/changePercentZlValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/myrBarChart"
        app:layout_constraintStart_toEndOf="@+id/changePercentZl"
        app:layout_constraintTop_toBottomOf="@+id/changePercentMyrValue"
        app:layout_constraintVertical_bias="0.058" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/myrBarChart"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>